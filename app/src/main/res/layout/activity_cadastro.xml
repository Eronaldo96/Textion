<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.erona.textion.CadastroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.08"
                android:text="         Cadastro"
                android:textColor="#fe0202"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/etNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="40dp"
                android:layout_weight="0.08"
                android:background="@color/colorAccent"
                android:ems="10"
                android:hint="Nome:"
                android:inputType="textPersonName"
                android:textColor="?attr/colorControlNormal"
                android:textColorHint="?attr/colorControlNormal"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etNome"
                android:layout_weight="0.08"
                android:background="@color/colorAccent"
                android:ems="10"
                android:hint="Email:"
                android:inputType="textEmailAddress"
                android:textColorHint="?attr/colorControlNormal"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/etSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etEmail"
                android:layout_weight="0.08"
                android:background="@color/colorAccent"
                android:ems="10"
                android:hint="Senha:"
                android:inputType="textPassword"
                android:textColorHint="?attr/colorControlNormal"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/etSenha"
                    android:background="@android:color/transparent"
                    android:text="Data:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/etDataNascimento"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/etSenha"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:ems="10"
                    android:hint="dd/mm/aaaa"
                    android:inputType="date"
                    android:textColorHint="?attr/colorControlNormal"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sexo:"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                    <RadioButton
                        android:id="@+id/rbMasculino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Masculino" />

                    <RadioButton
                        android:id="@+id/rbFeminino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feminino" />

                </RadioGroup>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbLoading"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/Foto"
                    android:layout_width="185dp"
                    android:layout_height="185dp"
                    android:layout_weight="0.83"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

                <Button
                    android:id="@+id/btFoto"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:elevation="0dp"
                    android:text="Foto"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <Button
                android:id="@+id/btCadastrar"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rbMasculino"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="52dp"
                android:background="@color/colorAccent"
                android:elevation="0dp"
                android:text="@string/cadastrar"
                android:textColor="#fb0202"
                android:textSize="20sp"
                android:layout_weight="0.08" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
