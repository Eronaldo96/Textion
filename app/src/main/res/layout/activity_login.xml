<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.erona.textion.LoginActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:text="        Login"
        android:textAppearance="@android:style/TextAppearance.Theme"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="50sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="58dp"
                android:layout_weight="0.09"
                android:background="@color/colorAccent"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/etSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/etEmail"
                android:layout_marginTop="52dp"

                android:layout_weight="0.09"
                android:background="@color/colorAccent"
                android:ems="10"
                android:hint="@string/senha"
                android:inputType="textPassword"
                android:textSize="40sp" />

            <ProgressBar
                android:id="@+id/pbLoading"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:visibility="gone" />

            <Button
                android:id="@+id/btEsqueceuSenha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:text="Redefinir senha" />

            <Space
                android:id="@+id/Espaço"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.09" />

            <Button
                android:id="@+id/btLogar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.09"
                android:background="@color/colorAccent"
                android:text="@string/logar"
                android:textColor="#ff0000"
                android:textSize="30sp"
                android:visibility="visible" />

            <Space
                android:id="@+id/Espaço"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.55" />

            <Button
                android:id="@+id/btCriarConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btLogar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent"
                android:onClick="v"
                android:text="Criar Conta"
                android:textColor="?android:attr/colorPrimaryDark"
                android:textSize="20sp"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
