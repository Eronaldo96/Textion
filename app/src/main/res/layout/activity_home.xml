<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    app:layout_collapseParallaxMultiplier="0.6"
    tools:context="com.example.erona.textion.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.06">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btSair"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:background="@android:color/transparent"
                android:text="sair"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.06"
                android:text="        Home"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.06"
                android:text="Pesquisar Texto:"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp" />

            <SearchView
                android:id="@+id/svPesquisar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_weight="0.06"
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="29dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btCriarTexto"
                android:layout_weight="0.06"
                android:text="Biblioteca de Textos:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btVerLivros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_weight="0.06"
                android:background="@color/colorAccent"
                android:text="@string/ver"
                android:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="33dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:text="Edição de Texto:"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btCriarTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/svPesquisar"
                android:layout_weight="0.06"
                android:background="@color/colorAccent"
                android:text="@string/criar_texto"
                android:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:text="Publicações:"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btNovidades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="VER" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
